    private void btnkurangActionPerformed(java.awt.event.ActionEvent evt) {                                          
        angka1 = Double.parseDouble(angka);
        layar.setText("-");
        angka = "";
        pilihan = 4;
    }                                         

    private void btn0ActionPerformed(java.awt.event.ActionEvent evt) {                                     
         angka += "0";
        layar.setText(angka);
    }                                    

