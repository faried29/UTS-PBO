    private void btnModulusActionPerformed(java.awt.event.ActionEvent evt) {                                           
        angka1 = Double.parseDouble(angka);
        tampil.setText("%");
        angka = "";
        pilihan = 5;
    }                                          

    private void btnKomaActionPerformed(java.awt.event.ActionEvent evt) {                                        
        angka += ".";
        tampil.setText(angka);
    }                                       

    private void btnClearActionPerformed(java.awt.event.ActionEvent evt) {                                         
        tampil.setText("");
        angka1 =0.0;
        angka2 =0.0;
        angka ="";
    }                                        

    private void btnSamadenganActionPerformed(java.awt.event.ActionEvent evt) {                                              
        switch (pilihan) {
            case 1:
                angka2 = Double.parseDouble(angka);
                jumlah = angka1 + angka2;
                angka = Double.toString(jumlah);
                tampil.setText(angka);
            break;
            
            case 2:
                angka2 = Double.parseDouble(angka);
                jumlah = angka1 - angka2;
                angka = Double.toString(jumlah);
                tampil.setText(angka);
            break;
            
            case 3:
                angka2 = Double.parseDouble(angka);
                jumlah = angka1 * angka2;
                angka = Double.toString(jumlah);
                tampil.setText(angka);
            break;
            
            case 4:
                angka2 = Double.parseDouble(angka);
                jumlah = angka1 / angka2;
                angka = Double.toString(jumlah);
                tampil.setText(angka);
            break;

            case 5:
                angka2 = Double.parseDouble(angka);
                jumlah = angka1 % angka2;
                angka = Double.toString(jumlah);
                tampil.setText(angka);
            break;
        }
    }                            
